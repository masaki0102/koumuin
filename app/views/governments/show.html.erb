<div class="main">
  <div class="inner">
    
      <h2 class="page-heading">
        <%= " #{@government.name}の試験情報" %>
     <div class="exams"> 
       <% @exams.each do|exam| %>
           <div class="exam">
            <li class="exam__list">
              <%= exam.category.name%>
            </li>
            <li class="exam__list">
              <%= exam.date %>
            </li>
            <li class="exam__list">
              <%= exam.age %>
            </li>
           <% if exam.government  == current_government %>
            <div class="exam__manage">
               <%= link_to "編集する", edit_exam_path(exam.id) %>
               <%= link_to "削除する", exam_path(exam),method: :delete%>
            </div>
          <% end %>
        </div>
        <% end %>
    </div>
  </div>
</div>