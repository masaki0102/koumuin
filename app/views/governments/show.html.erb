<div class="main">
  <div class="inner">
      <h2 class="page-heading">
        <%= " #{@government.name}の試験情報" %>
     <div class="exams"> 
     <% if @exams.exists? %>
       <% @exams.each do|exam| %>
          <div class="exam">
            <li class="exam__list">
              <%= "募集職種:#{exam.category.name}" %>
            </li>
            <li class="exam__list">
              <%= "日程:#{exam.date}"%>
            </li>
            <li class="exam__list">
              <%= "年齢制限:#{exam.age}" %>
            </li>
            <%# いいね %>
            <div class="exam__like" >
              <%= render 'likes/like', { exam: exam} %>
            </div>
             <%# 編集・削除 %>
            <div class="exam__manage">
            <% if exam.government  == current_government %>
               <%= link_to "編集する", edit_exam_path(exam.id) %>
               <%= link_to "削除する", exam_path(exam),method: :delete%>
            <% end %>
            </div>
          </div>

        <% end %>
      <% else %>
       現在募集中の職種はありません 
      <% end %>
     </div>
  </div>
</div>