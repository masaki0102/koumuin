<%if user_signed_in? %>
  <% if Like.find_by(user_id: current_user.id, exam_id: exam.id) %>
    <%=link_to exam_like_path(exam, exam.likes), 
    {method: "delete", remote: true, class: "likes-count"} do %>
      <i class="fas fa-star"  style="color:gold" ></i>
      <%= exam.likes.count %>
    <% end %>
  <% else %>
  <%=link_to exam_likes_path(exam), 
  {method: "post", remote: true, class: "likes-count"} do %>
    <i class="far fa-star"></i>
    <%= exam.likes.count %>
    <% end %>
  <% end %>
<% else %>
  <i class="far fa-star"></i><%= exam.likes.count %>
<% end %>
