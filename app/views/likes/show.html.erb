  
<div class="inner">
      <h2 class="page-heading">
        <%= " #{current_user.name}さんがいいねした試験" %>
        </h2 >
   <div class="exams"> 
     <% if @likes.exists? %>
       <% @likes.each do|like| %>
          <div class="exam">
              <div class="exam__list">
              <%= "#{like.exam.government.name}" %>
              </div>
              <div class="exam__list">
              <%= "募集職種:#{like.exam.category.name}" %>
              </div>
              <div class="exam__list">
              <%= "日程:#{like.exam.date}"%>
              </div>
              <div class="exam__list">
              <%= "年齢制限:#{like.exam.age}" %>
              </div>
          </div>
        <% end %>
      <% else %> 
      <div class="exam">
        まだいいねした試験はありません。 
      </div>
       <% end %> 
     </div>
</div>
